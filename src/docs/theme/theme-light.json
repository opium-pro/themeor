{
  "meta": {
    "name": "light",
    "version": "1.0",
    "contact": "Denis Elianovsky http://opium.pro",
    "description": ""
  },

  "themeContext": {
    "shallInverseOn": ["base", "faint", "accent", "complement", "critic", "success", "--demo-var"],
    "template": ["light"],
    "_randomContectValue": "HERE YOU CAN SET VALUES FOR ThemeContext, BUT PLEASE START THEM WITH UNDERSCORE",
    "_formAttemtionFill": "accent"
  },

  "customVariables": {
    "random-css-variable": "HERE YOU CAN SET YOUR CSS VARIABLES",
    "demo-var": "#fc0"
  },

  "fill": {
    "base": {
      "strong": "#000",
      "weak": "#fff"
    },
    "faint": {
      "strong": "#8994A6",
      "strong-down": "#AAB",
      "weak": "#F6F8FB",
      "weak-up": "#EDF1F7",
      "weak-down": "#FAFBFD"
    },
    "accent": {
      "strong": "#1273F3",
      "weak": "#EBF4FF",
      "weak-up": "#DBEBFF"
    },
    "complement": {
      "strong": "#8889E2",
      "weak": "#EEECFD"
    },
    "critic": {
      "strong": "#F74545",
      "weak": "#FDEDED"
    },
    "warning": {
      "strong": "#E1922D",
      "weak": "#FCEBCF"
    },
    "success": {
      "strong": "#27AE60",
      "weak": "#DEF8E9"
    }
  },

  "fancy-fill": {
    "accent": {
      "strong": "linear-gradient(132deg, #3F89EE, #5447FF)",
      "strong-down": "linear-gradient(132deg, #448FF3, #594CFF)",
      "strong-up": "linear-gradient(132deg, #357FE4, #4A3DF5)"
    }
  },

  "box": {
    "radius": {
      "xs": "2px",
      "sm": "4px",
      "md": "12px",
      "lg": "16px",
      "xl": "20px",
      "x2l": "40px",
      "x3l": "60px"
    },
    "shadow": {
      "md": "0px 20px 40px rgba(59, 70, 128, 0.05)",
      "lg": "0px 20px 40px rgba(6, 7, 12, 0.10)"
    },
    "fill": {
      "base": {
        "strong": "#222428"
      },
      "accent": {
        "weak": "#202C3C",
        "weak-up": "#1F3451"
      },
      "faint": {
        "strong": "#323438",
        "weak-up": "rgba(255, 255, 255, 0.1)",
        "weak": "rgba(255, 255, 255, 0.05)"
      },
      "critic": {
        "weak": "#521E1E"
      }
    }
  },

  "font": {
    "family": {
      "regular": "'Helvetica', sans-serif",
      "special": "'Montserrat', 'YOU NEED TO INCLUDE @font-face BY YOURSELF', sans-serif"
    },
    "fill": {
      "faint": {
        "weak": "rgba(237, 241, 247, 0.5)"
      },
      "accent": {
        "weak": "#4294FF"
      }
    },
    "line-height": {
      "sm": "1.2",
      "md": "1.5"
    },
    "letter-spacing": {
      "md": "0",
      "lg": "0.05em"
    },
    "size": {
      "xs": "12px",
      "sm": "14px",
      "md": "16px",
      "lg": "20px",
      "xl": "28px",
      "x2l": "40px",
      "x3l": "80px"
    }
  },

  "line": {
    "fill": {
      "faint": {
        "strong-down": "rgba(0, 43, 107, 0.06)",
        "strong": "rgba(0, 43, 107, 0.11)",
        "strong-up": "rgba(0, 43, 107, 0.20)",
        "weak": "rgba(255, 255, 255, 0.1)"
      }
    },
    "weight": {
      "md": "1px",
      "lg": "2px",
      "xl": "4px",
      "x2l": "6px"
    }
  },

  "icon": {
    "size": {
      "xs": "12px",
      "sm": "16px",
      "md": "24px",
      "lg": "32px",
      "xl": "40px"
    }
  },

  "gap": {
    "x2s": "4px",
    "xs": "8px",
    "sm": "16px",
    "md": "24px",
    "lg": "32px",
    "xl": "40px",
    "x2l": "64px",
    "x3l": "80px"
  },

  "reaction": {
    "speed": {
      "md": "0.25s"
    }
  },

  "effect": {
    "transparency": {
      "x2s": "0.95",
      "xs": "0.9",
      "sm": "0.75",
      "md": "0.5",
      "lg": "0.25",
      "xl": "0.1",
      "x2l": "0.05"
    }
  }
}